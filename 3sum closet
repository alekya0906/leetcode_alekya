class Solution:
    def threeSumClosest(self, nums: List[int], target: int) -> int:
        nums.sort()
        n = len(nums)
        prev = float('inf')
        total = 0
        if len(nums) <= 3:
            return sum(nums)

        for i in range(n - 2):
            left, right = i + 1, n - 1
            while left < right:
                total = nums[left] + nums[right] + nums[i]
                if total == target:
                    return total
                elif total < target:
                    left += 1
                else:
                    right -= 1
                if abs(target - prev) > abs(target - total):
                    prev = total

        return min(prev, total)
